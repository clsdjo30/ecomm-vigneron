{% extends 'base.html.twig' %}

{% block title %}Votre Panier - Domaine de la Gardiole{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-4"><i class="bi bi-cart3"></i> Votre Panier</h1>

    {% if cart|length > 0 %}
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <table class="table align-middle">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th class="text-center">Prix unitaire</th>
                                    <th class="text-center">Quantité</th>
                                    <th class="text-end">Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in cart %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                {% if item.product.imageUrl %}
                                                    <img src="{{ item.product.imageUrl }}" alt="{{ item.product.name }}" class="img-thumbnail me-3" style="width: 80px; height: 80px; object-fit: cover;">
                                                {% endif %}
                                                <div>
                                                    <h6 class="mb-0">{{ item.product.name }}</h6>
                                                    <small class="text-muted">{{ item.product.category.name }}</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <strong>{{ (item.product.price / 100)|format_currency('EUR') }}</strong>
                                        </td>
                                        <td class="text-center">
                                            <form method="post" action="{{ path('app_cart_update', {id: item.product.id}) }}" class="d-inline">
                                                <div class="input-group input-group-sm" style="width: 120px; margin: 0 auto;">
                                                    <input type="number" name="quantity" value="{{ item.quantity }}" min="1" max="99" class="form-control">
                                                    <button type="submit" class="btn btn-outline-secondary">
                                                        <i class="bi bi-check"></i>
                                                    </button>
                                                </div>
                                            </form>
                                        </td>
                                        <td class="text-end">
                                            <strong>{{ (item.subtotal / 100)|format_currency('EUR') }}</strong>
                                        </td>
                                        <td class="text-end">
                                            <a href="{{ path('app_cart_remove', {id: item.product.id}) }}" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Continuer mes achats
                    </a>
                    <a href="{{ path('app_cart_clear') }}" class="btn btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir vider votre panier ?')">
                        <i class="bi bi-trash"></i> Vider le panier
                    </a>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-wine text-white">
                        <h5 class="mb-0">Récapitulatif</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Sous-total</span>
                            <strong>{{ (total / 100)|format_currency('EUR') }}</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Frais de Click & Collect</span>
                            <strong class="text-success">Gratuit</strong>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-4">
                            <h5>Total</h5>
                            <h5 class="text-wine"><strong>{{ (total / 100)|format_currency('EUR') }}</strong></h5>
                        </div>
                        <a href="{{ path('app_checkout_index') }}" class="btn btn-wine btn-lg w-100">
                            <i class="bi bi-check-circle"></i> Valider ma commande
                        </a>
                    </div>
                </div>

                <div class="alert alert-info mt-3">
                    <i class="bi bi-info-circle"></i>
                    <strong>Click & Collect</strong><br>
                    <small>Votre commande sera à retirer au domaine sous 48h</small>
                </div>
            </div>
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="bi bi-cart-x display-1 text-muted"></i>
            <h3 class="mt-4 mb-3">Votre panier est vide</h3>
            <p class="text-muted mb-4">Découvrez notre sélection de vins d'exception</p>
            <a href="{{ path('app_category_show', {slug: 'vins-rouges'}) }}" class="btn btn-wine me-2">Vins Rouges</a>
            <a href="{{ path('app_category_show', {slug: 'vins-blancs'}) }}" class="btn btn-wine me-2">Vins Blancs</a>
            <a href="{{ path('app_category_show', {slug: 'vins-roses'}) }}" class="btn btn-wine">Vins Rosés</a>
        </div>
    {% endif %}
</div>
{% endblock %}
