{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Domaine de la Gardiole{% endblock %}

{% block body %}
<div class="container my-5">
    {# En-tête de la catégorie #}
    <div class="text-center mb-5">
        <h1 class="display-4">{{ category.name }}</h1>
        <p class="lead text-muted">Découvrez notre sélection de {{ category.name|lower }}</p>
    </div>

    {# Grille de produits #}
    {% if category.products|length > 0 %}
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for product in category.products %}
                <div class="col">
                    {% include 'components/_product_card.html.twig' with {'product': product} %}
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle fs-3"></i>
            <p class="mt-3 mb-0">Aucun produit disponible dans cette catégorie pour le moment.</p>
            <a href="{{ path('app_home') }}" class="btn btn-outline-primary mt-3">Retour à l'accueil</a>
        </div>
    {% endif %}
</div>
{% endblock %}
