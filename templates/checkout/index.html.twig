{% extends 'base.html.twig' %}

{% block title %}Validation de ma commande - Domaine de la Gardiole{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-5"><i class="bi bi-check-circle"></i> Validation de ma commande</h1>

    <div class="row">
        {# Formulaire de commande #}
        <div class="col-lg-7">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-wine text-white">
                    <h5 class="mb-0"><i class="bi bi-person-fill"></i> Vos informations</h5>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">Renseignez vos coordonnées pour finaliser votre commande Click & Collect</p>

                    {{ form_start(orderForm) }}
                        <div class="mb-3">
                            {{ form_label(orderForm.customerName) }}
                            {{ form_widget(orderForm.customerName) }}
                            {{ form_errors(orderForm.customerName) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(orderForm.customerEmail) }}
                            {{ form_widget(orderForm.customerEmail) }}
                            {{ form_errors(orderForm.customerEmail) }}
                            <div class="form-text">Vous recevrez une confirmation de commande à cette adresse</div>
                        </div>

                        {{ form_widget(orderForm.submit, {label: 'Payer ' ~ (total / 100)|format_currency('EUR')}) }}
                    {{ form_end(orderForm) }}
                </div>
            </div>

            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                <strong>Mode de retrait :</strong> Click & Collect<br>
                <small>Votre commande sera disponible sous 48h au domaine. Vous recevrez un email de confirmation.</small>
            </div>
        </div>

        {# Récapitulatif de la commande #}
        <div class="col-lg-5">
            <div class="card shadow-sm sticky-top" style="top: 100px;">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-cart3"></i> Récapitulatif</h5>
                </div>
                <div class="card-body">
                    {% for item in cart %}
                        <div class="d-flex justify-content-between align-items-start mb-3 pb-3 border-bottom">
                            <div class="flex-grow-1 me-3">
                                <h6 class="mb-1">{{ item.product.name }}</h6>
                                <small class="text-muted">{{ item.product.category.name }}</small>
                                <div class="mt-1">
                                    <small class="text-muted">
                                        Qté : {{ item.quantity }} × {{ (item.product.price / 100)|format_currency('EUR') }}
                                    </small>
                                </div>
                            </div>
                            <div class="text-end">
                                <strong>{{ (item.subtotal / 100)|format_currency('EUR') }}</strong>
                            </div>
                        </div>
                    {% endfor %}

                    <div class="d-flex justify-content-between mb-2">
                        <span>Sous-total</span>
                        <strong>{{ (total / 100)|format_currency('EUR') }}</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Frais de Click & Collect</span>
                        <strong class="text-success">Gratuit</strong>
                    </div>

                    <hr class="my-3">

                    <div class="d-flex justify-content-between">
                        <h5>Total à payer</h5>
                        <h5 class="text-wine"><strong>{{ (total / 100)|format_currency('EUR') }}</strong></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
